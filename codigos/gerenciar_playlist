def gerenciar_playlist():
    print("\n1. Criar Playlist\n2. Editar Playlists\n3. Excluir Playlist\n4. Voltar")
    oq_fazer = input("\nOpção: ")

    if oq_fazer == '1':
        criar_playlist()
    if oq_fazer == '2':
        editar_playlist()
    if oq_fazer == '3':
        print('alala')
    if oq_fazer == '4':
        print('lalala')
    
        
